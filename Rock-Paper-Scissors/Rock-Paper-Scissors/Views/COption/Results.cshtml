@{
    ViewBag.Title = "Results";
}
<html class="Result">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/css.css" />
</head>


<div class="container text-center">
    @if (ViewBag.Message == "You Lose")
    {
        <h1 class="Message">You Lose</h1>
    }
    else if (ViewBag.Message == "Congratulations! You Win!")
    {
        <h1 class="Message">@ViewBag.Message</h1>

    }
    else
    {
        <h1 class="Message">@ViewBag.Message</h1>
    }

    <p>@ViewBag.Choices</p>
</div>

<div class="container text-center ResultButtons">
    <table class="center">
        <tr>
            <td class="text-center">
                <form asp-controller="COption" asp-action="Play">
                    <button type="submit" class="btn btn-success">Play Again?</button>
                </form>
            </td>

            <td class="text-center">
                <form asp-controller="Home" asp-action="Index">
                    <button type="submit" class="btn btn-outline-danger">Cancel</button>
                </form>
            </td>
        </tr>
    </table>
</div>
</html>